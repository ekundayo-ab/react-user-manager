{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "jsx-a11y/label-has-for": [ 2, {
        "components": [ "label" ],
        "required": {
            "every": [ "id" ]
        },
        "allowChildren": false
      }],
      "jsx-a11y/label-has-associated-control": [ 2, {
        "components": [ "label" ],
        "required": {
            "every": [ "id" ]
        },
        "allowChildren": false
      }],
      "no-underscore-dangle":"off"
    }
}
